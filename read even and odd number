#include <iostream>
using namespace std;

int main()
{
	int n;
	char select;

	do
	{
		cout << "Please enter a value\n";
		cin >> n;
		
		if (n % 2 == 0)
			cout << n << " is even number" << endl;

		else if (n % 2 != 0)
			cout << n << " is odd number" << endl;

		cout << "If you want to repeat the loop, please enter Y/y. If not otherelse." << endl;
		cin >> select;

	} while (select == 'Y' || select == 'y' );

	return 0;
}
